<h1 class="mb-4">ğŸ“‹ Task Dashboard</h1>

<div class="mb-3">
  <%= link_to "All Tasks", root_path, class: "btn btn-outline-primary me-2" %>
  <%= link_to "Pending", tasks_path(filter: "pending"), class: "btn btn-outline-warning me-2" %>
  <%= link_to "Completed", tasks_path(filter: "completed"), class: "btn btn-outline-success me-2" %>
  <%= link_to "New Task", new_task_path, class: "btn btn-outline-info" %>
</div>

<table class="table table-striped table-bordered">
  <thead class="table-dark">
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Status</th>
      <th colspan="3">Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= task.title %></td>
        <td><%= task.description %></td>
        <td>
          <% if task.completed? %>
            <span class="badge bg-success">âœ… Completed</span>
          <% else %>
            <span class="badge bg-warning text-dark">â— Pending</span>
          <% end %>
        </td>
        <td><%= link_to "Edit", edit_task_path(task), class: "btn btn-sm btn-outline-secondary" %></td>
        <td><%= button_to "Delete", task_path(task), method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-sm btn-outline-danger", form: { class: "d-inline" } %>
</td>
        <td>
        <% if task.completed? %>
  <%= button_to "Mark Incomplete", task_path(task),
      method: :patch,
      params: { task: { completed: false } },
      class: "btn btn-sm btn-outline-warning",
      form: { class: "d-inline" } %>
<% else %>
  <%= button_to "Mark Complete", task_path(task),
      method: :patch,
      params: { task: { completed: true } },
      class: "btn btn-sm btn-outline-success",
      form: { class: "d-inline" } %>
<% end %>

        </td>
      </tr>
    <% end %>
  </tbody>
</table>