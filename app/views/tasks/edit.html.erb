<h1 class="mb-4">✏️ Editing Task</h1>

<%= form_with model: @task, local: true do |form| %>
  <div class="mb-3">
    <%= form.label :title, class: "form-label" %>
    <%= form.text_field :title, class: "form-control", placeholder: "Enter task title" %>
  </div>

  <div class="mb-3">
    <%= form.label :description, class: "form-label" %>
    <%= form.text_area :description, class: "form-control", placeholder: "Enter task description", rows: 3 %>
  </div>

  <div class="form-check mb-3">
    <%= form.check_box :completed, class: "form-check-input" %>
    <%= form.label :completed, class: "form-check-label" %>
  </div>

  <%= form.submit "Update Task", class: "btn btn-primary" %>
<% end %>

<div class="d-flex gap-2 mt-4">
  <%= link_to "Show this task", @task, class: "btn btn-outline-secondary" %>
  <%= link_to "Back to tasks", tasks_path, class: "btn btn-outline-primary" %>
</div>