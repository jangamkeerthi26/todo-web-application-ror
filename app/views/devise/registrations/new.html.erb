<h2 class="text-center mb-4">üìù Sign Up for a New Account</h2>

<div class="row justify-content-center">
  <div class="col-md-6">
    <%= form_with(model: resource, as: resource_name, url: registration_path(resource_name), local: true, class: "border p-4 rounded shadow-sm bg-white") do |form| %>
      
      <div class="mb-3">
        <%= form.label :email, class: "form-label" %>
        <%= form.email_field :email, autofocus: true, class: "form-control", placeholder: "you@example.com" %>
      </div>

      <div class="mb-3">
        <%= form.label :password, class: "form-label" %>
        <%= form.password_field :password, autocomplete: "new-password", class: "form-control", placeholder: "Minimum 6 characters" %>
      </div>

      <div class="mb-3">
        <%= form.label :password_confirmation, class: "form-label" %>
        <%= form.password_field :password_confirmation, autocomplete: "new-password", class: "form-control", placeholder: "Re-enter password" %>
      </div>

      <%= form.submit "Create Account", class: "btn btn-success w-100" %>
    <% end %>

    <div class="mt-3 text-center">
      <%= link_to "Already have an account? Log in", new_user_session_path %>
    </div>
  </div>
</div>
