<h2 class="text-center mb-4">🔐 Log in to Your Account</h2>

<div class="row justify-content-center">
  <div class="col-md-6">
    <%= form_with scope: :user, url: session_path(:user), local: true, class: "border p-4 rounded shadow-sm bg-white" do |form| %>
      
      <div class="mb-3">
        <%= form.label :email, class: "form-label" %>
        <%= form.email_field :email, autofocus: true, class: "form-control", placeholder: "you@example.com" %>
      </div>

      <div class="mb-3">
        <%= form.label :password, class: "form-label" %>
        <%= form.password_field :password, autocomplete: "current-password", class: "form-control", placeholder: "••••••••" %>
      </div>

      <div class="mb-3 form-check">
        <%= form.check_box :remember_me, class: "form-check-input" %>
        <%= form.label :remember_me, class: "form-check-label" %>
      </div>

      <%= form.submit "Log In", class: "btn btn-primary w-100" %>
    <% end %>

    <div class="mt-3 text-center">
      <%= link_to "Forgot your password?", new_user_password_path %><br>
      <%= link_to "Don’t have an account? Sign up", new_user_registration_path %>
    </div>
  </div>
</div>
